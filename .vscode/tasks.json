{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "make",
			"type": "shell",
			"command": "make clean && make 32 64 DEBUG=true",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "compile_commands",
			"type": "shell",
			"command": "bear -- make 32"
		},
		{
			"label": "format",
			"type": "shell",
			"command": "clang-format -i --style=Google --sort-includes=false *.c *.h"
		},
		{
			"label": "setup_prefix",
			"type": "shell",
			"command": "${workspaceRoot}/.vscode/setup_prefix.sh"
		},
		{
			"label": "build_and_debug32",
			"type": "shell",
			"command": "${workspaceRoot}/.vscode/build_and_launch32.sh",
		},
		{
			"label": "build_and_debug64",
			"type": "shell",
			"command": "${workspaceRoot}/.vscode/build_and_launch64.sh",
		},
		{
			"label": "kill_debug",
			"type": "shell",
			"command": "${workspaceRoot}/.vscode/kill_debug.sh"
		},
		{
			"label": "launch_cmd",
			"type": "shell",
			"command": "${workspaceRoot}/.vscode/launch_cmd.sh"
		}
	]
}