{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "make",
			"type": "shell",
			"command": "make clean && make DEBUG=true",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "compile_commands",
			"type": "shell",
			"command": "bear -- make"
		},
		{
			"label": "format",
			"type": "shell",
			"command": "clang-format -i --style=Google --sort-includes=false asio.c main.c interface.h regsvr.c"
		},
		{
			"label": "setup_prefix",
			"type": "shell",
			"command": "${workspaceRoot}/.vscode/setup_prefix.sh"
		},
		{
			"label": "build_and_debug",
			"type": "shell",
			"command": "${workspaceRoot}/.vscode/build_and_launch.sh",
		},
		{
			"label": "kill_debug",
			"type": "shell",
			"command": "${workspaceRoot}/.vscode/kill_debug.sh"
		},
		{
			"label": "launch_cmd",
			"type": "shell",
			"command": "${workspaceRoot}/.vscode/launch_cmd.sh"
		},
		{
			"label": "launch_asio_test",
			"type": "shell",
			"command": "${workspaceRoot}/.vscode/launch_asio_test.sh"
		}
	]
}